.GridWrap_SpaceAround {
  display: grid;
  grid-template-columns: repeat(auto-fill, 64vmin);
  grid-template-rows: 64vmin;
  justify-content: space-around;
  gap: 2vw 0;
}

.GridWrap_Center {
  display: grid;
  grid-template-columns: 64vmin;
  grid-template-rows: 64vmin;
  justify-content: center;
  gap: 2vw 0;
}

.GridWrap_SpaceAround img,
.GridWrap_Center img {
  display: inline-block;
  box-sizing: border-box;
  border: solid thin #000;
  background: #d3e7cb;
  width: 64vmin;
  height: 64vmin;
  object-fit: contain;
}

.inline-block {
  display: inline-block;
}

.Visibility_Hidden {
  visibility: hidden;
}

.GridWrap_SpaceAround input:checked+.Display_Filter,
.GridWrap_Center input:checked+.Display_Filter {
  display: inline-block;
}

.GridWrap_SpaceAround input:checked+.Display_Filter+img,
.GridWrap_Center input:checked+.Display_Filter+img {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  z-index: 2147483647;
  /* z-indexの最大値：2147483647 */
  width: 125vmin;
  height: 125vmin;
  border: none 0 #000;
  background-color: transparent;
}

.Display_Filter {
  display: none;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100vh;
  z-index: 2147483647;
  /* z-indexの最大値：2147483647 */
  background-color: #000;
  opacity: 0.5;
}

.GridWrap_SpaceAround input[type='checkbox'],
.GridWrap_Center input[type='checkbox'] {
  display: none;
}
